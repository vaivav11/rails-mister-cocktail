<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_path "cocktail.jpeg" %>');">
  <div class="banner-content">
    <h1>Cocktails</h1>

  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <% unless cocktail.photo? %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('https://static.pexels.com/photos/109275/pexels-photo-109275.jpeg');">
          <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <% end %>
          <h2><%= cocktail.name %></h2>
        </div>
      </div>
      <% else %>
        <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')";>
          <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <% end %>
          <h2><%= cocktail.name %></h2>
        </div>
      </div>
    <% end %>
    <%end %>
  </div>
</div>


<%= link_to 'New Cocktail', new_cocktail_path, class: "new-cocktail" %>
