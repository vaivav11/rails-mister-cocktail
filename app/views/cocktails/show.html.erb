<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h2>Recipe</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> : <%= dose.description %></li>
    <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>

</ul>

<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail) %>


<%= link_to 'Back', cocktails_path %>
